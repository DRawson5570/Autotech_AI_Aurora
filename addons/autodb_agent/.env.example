# AutoDB Agent Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# LLM Model Selection
# =============================================================================
# For Gemini: gemini-2.0-flash-lite, gemini-2.0-flash, gemini-2.5-flash
# For Ollama: qwen2.5:7b-instruct, llama3.1:8b, etc.
AUTODB_MODEL=qwen2.5:7b-instruct

# =============================================================================
# Ollama Settings (only used when AUTODB_MODEL is an Ollama model)
# =============================================================================
AUTODB_OLLAMA_URL=http://localhost:11434
AUTODB_OLLAMA_NUM_CTX=12000
AUTODB_OLLAMA_NUM_PREDICT=1024

# =============================================================================
# Gemini Settings (only used when AUTODB_MODEL is a Gemini model)
# =============================================================================
# API key can also be in ~/gary_gemini_api_key file
# GOOGLE_API_KEY=your_api_key_here

# =============================================================================
# LLM Tuning
# =============================================================================
AUTODB_LLM_TEMPERATURE=0.1
AUTODB_LLM_MAX_TOKENS=1024

# Rate limiting (for Gemini)
AUTODB_LLM_MAX_RETRIES=3
AUTODB_LLM_RETRY_BASE_DELAY=2.0
AUTODB_LLM_DELAY=0.2

# =============================================================================
# Navigation Settings
# =============================================================================
AUTODB_MAX_STEPS=15
AUTODB_MAX_LINKS=50
AUTODB_MAX_CONTENT=4000
AUTODB_MAX_PATH_HISTORY=10

# =============================================================================
# Timeouts
# =============================================================================
AUTODB_HTTP_TIMEOUT=60

# =============================================================================
# Base URL (Operation CHARM site)
# =============================================================================
AUTODB_BASE_URL=http://automotive.aurora-sentient.net/autodb
